<Window x:Class="Gulayan.CatalogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gulayan"
        mc:Ignorable="d"
        Title="Catalog" Height="450" Width="800" ResizeMode="NoResize" WindowState="Maximized" WindowStartupLocation="CenterScreen">


    <Grid >
        <ListView Name="ItemList" Margin="5,20,5,0" Height="195" VerticalAlignment="Top" d:ItemsSource="{d:SampleData ItemCount=5}">
      
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Barcode" Width="150"  DisplayMemberBinding="{Binding ProductBarcode}"/>
                    <GridViewColumn Header="Type" Width="100" DisplayMemberBinding="{Binding ProductType}"/>
                    <GridViewColumn Header="Name" Width="100" DisplayMemberBinding="{Binding ProductName}"/>
                    <GridViewColumn Header="Description" Width="250" DisplayMemberBinding="{Binding ProductDescription}"/>
                    <GridViewColumn Header="Production Date" Width="150" DisplayMemberBinding="{Binding ProductProductionDate}"/>
                    <GridViewColumn Header="Expiration Date" Width="150" DisplayMemberBinding="{Binding ProductExpirationDate}"/>
                    <GridViewColumn Header="Manufacturer" Width="10" DisplayMemberBinding="{Binding ProductManufacturer}"/>
                    <GridViewColumn Header="Stock" Width="20" DisplayMemberBinding="{Binding ProductStock}"/>
                    <GridViewColumn Header="Weight" Width="20" DisplayMemberBinding="{Binding ProductWeight}"/>
                    <GridViewColumn Header="Price" Width="30" DisplayMemberBinding="{Binding ProductPrice}"/>
                </GridView>
            </ListView.View>
        </ListView>


