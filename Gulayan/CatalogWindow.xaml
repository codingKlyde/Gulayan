<Window x:Class="Gulayan.CatalogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gulayan"
        mc:Ignorable="d"
        xmlns:icon="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        Title="Catalog" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Border CornerRadius="10" BorderThickness="3">
        <Border.BorderBrush>
            <LinearGradientBrush EndPoint="1, 1" StartPoint="0, 0">
                <GradientStop Color="{StaticResource Color1}" Offset="0"/>
                <GradientStop Color="{StaticResource Color2}" Offset="0.75"/>
                <GradientStop Color="{StaticResource Color3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Side Navigation -->
                <Border Background="White" CornerRadius="10, 0, 0, 10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Height="35" Margin="15, 25, 0, 40" >
                            <Image Height="30" Source="/Assets/user-20.png" />
                            <TextBlock  Text="LOGO" Foreground="Black" FontFamily="Consolas" FontWeight="Medium" VerticalAlignment="Center" Margin="10,0,0,0" />
                        </StackPanel>

                        <RadioButton Style="{StaticResource MenuStyle}" Tag="{StaticResource PrimaryColor}">
                            <StackPanel Orientation="Horizontal">
                                <icon:IconImage Icon="Home" Style="{StaticResource MenuIconStyle}" />
                                <TextBlock Text="Dashboard" Style="{StaticResource MenuTextStyle}" />
                            </StackPanel>
                        </RadioButton>
                        <RadioButton Style="{StaticResource MenuStyle}" Tag="{StaticResource PrimaryColor}">
                            <StackPanel Orientation="Horizontal">
                                <icon:IconImage Icon="BoxesStacked" Style="{StaticResource MenuIconStyle}" />
                                <TextBlock Text="Catalog" Style="{StaticResource MenuTextStyle}" />
                            </StackPanel>
                        </RadioButton>
                        <RadioButton Style="{StaticResource MenuStyle}" Tag="{StaticResource PrimaryColor}">
                            <StackPanel Orientation="Horizontal">
                                <icon:IconImage Icon="Wrench" Style="{StaticResource MenuIconStyle}" />
                                <TextBlock Text="Settings" Style="{StaticResource MenuTextStyle}" />
                            </StackPanel>
                        </RadioButton>
                        <RadioButton Style="{StaticResource MenuStyle}" Tag="{StaticResource PrimaryColor}">
                            <StackPanel Orientation="Horizontal">
                                <icon:IconImage Icon="PowerOff" Style="{StaticResource MenuIconStyle}" />
                                <TextBlock Text="Logout" Style="{StaticResource MenuTextStyle}" />
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                </Border>
                
                
                
                
                <!-- Content -->
                <Border CornerRadius="0, 10, 10, 0" Grid.Column="1">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="1, 1" EndPoint="0, 0">
                            <GradientStop Color="{StaticResource Color1}" Offset="0" />
                            <GradientStop Color="{StaticResource Color2}" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>


                    <Grid>
                        <Grid.RowDefinitions>
                            <!-- Control Bar -->
                            <RowDefinition Height="25" />
                            <!-- Title Bar -->
                            <RowDefinition Height="35" />
                            <!--Child View -->
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <StackPanel Background="Transparent"
                                    FlowDirection="RightToLeft" 
                                    Margin="0,0,5,0"
                                    MouseLeftButtonDown="stckpnlControlBar_MouseLeftButtonDown"
                                    Orientation="Horizontal"
                                    x:Name="stckpnlControlBar">
                        
                            <Button Click="bttnClose_Click" Style="{StaticResource ControlStyle}" Tag="{StaticResource AccentColor}" x:Name="bttnClose">
                                <icon:IconImage Icon="Xmark" Style="{StaticResource ControlIconStyle}" />
                            </Button>
                            <Button Click="bttnMaximize_Click"  Style="{StaticResource ControlStyle}" Tag="{StaticResource AccentColor}" x:Name="bttnMaximize">
                                <icon:IconImage Icon="Square" Style="{StaticResource ControlIconStyle}" />
                            </Button>
                            <Button Click="bttnMinimize_Click" Style="{StaticResource ControlStyle}" Tag="{StaticResource AccentColor}" x:Name="bttnMinimize">
                                <icon:IconImage Icon="Minus" Style="{StaticResource ControlIconStyle}" Width="11" />
                            </Button>
                        </StackPanel>

                     

                        <StackPanel Grid.Row="1"
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Center">
                            <icon:IconImage Foreground="{StaticResource PrimaryColor}"
                                            Height="20" 
                                            Icon="BoxesStacked" 
                                            Margin="35, 0, 10, 0"
                                            Width="20" />
                            <TextBlock Foreground="{StaticResource PrimaryColor}" 
                                        FontFamily="Consalas"
                                        FontSize="16"
                                        FontWeight="Medium"
                                        Text="Catalog"
                                        VerticalAlignment="Center"/>
                        </StackPanel>


                        <StackPanel Grid.Row="2">
                            <ListView x:Name="lstvwProduct" Margin="5, 20, 5, 0" Height="195" VerticalAlignment="Top" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Column="1">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Barcode" Width="150"  DisplayMemberBinding="{Binding ProductBarcode}"/>
                                        <GridViewColumn Header="Type" Width="100" DisplayMemberBinding="{Binding ProductType}"/>
                                        <GridViewColumn Header="Name" Width="100" DisplayMemberBinding="{Binding ProductName}"/>
                                        <GridViewColumn Header="Description" Width="250" DisplayMemberBinding="{Binding ProductDescription}"/>
                                        <GridViewColumn Header="Production Date" Width="150" DisplayMemberBinding="{Binding ProductProductionDate}"/>
                                        <GridViewColumn Header="Expiration Date" Width="150" DisplayMemberBinding="{Binding ProductExpirationDate}"/>
                                        <GridViewColumn Header="Manufacturer" Width="10" DisplayMemberBinding="{Binding ProductManufacturer}"/>
                                        <GridViewColumn Header="Stock" Width="50" DisplayMemberBinding="{Binding ProductStock}"/>
                                        <GridViewColumn Header="Weight" Width="50" DisplayMemberBinding="{Binding ProductWeight}"/>
                                        <GridViewColumn Header="Price" Width="50" DisplayMemberBinding="{Binding ProductPrice}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <Button x:Name="ReadButton"  HorizontalAlignment="Left" Click="ReadButton_Click" Margin="90, 0, 0, 0" VerticalAlignment="Top" Width="70" Grid.Column="1" >
                                <StackPanel Orientation="Horizontal">
                                    <Path Stretch="Uniform" Data="M 399.5625 598.46875 C 397.90565 598.46875 396.5625 599.8119 396.5625 601.46875 L 396.5625 615.46875 C 396.5625 617.12565 397.90565 618.46875 399.5625 618.46875 L 411.5625 618.46875 C 413.2194 618.46875 414.5625 617.12565 414.5625 615.46875 L 414.5625 605.46875 C 414.5625 601.60276 411.4285 598.46875 407.5625 598.46875 L 399.5625 598.46875 z M 399.5625 600.46875 L 406.5625 600.46875 L 406.5625 605.46875 L 412.5625 605.46875 L 412.5625 615.46875 C 412.5625 616.02105 412.1148 616.46875 411.5625 616.46875 L 399.5625 616.46875 C 399.01022 616.46875 398.5625 616.02105 398.5625 615.46875 L 398.5625 601.46875 C 398.5625 600.91647 399.01022 600.46875 399.5625 600.46875 z M 408.5625 600.5625 C 410.1738 600.88958 411.51355 601.99781 412.15625 603.46875 L 408.5625 603.46875 L 408.5625 600.5625 z M 400.5625 604.46875 L 400.5625 606.46875 L 404.5625 606.46875 L 404.5625 604.46875 L 400.5625 604.46875 z M 400.5625 608.46875 L 400.5625 610.46875 L 410.5625 610.46875 L 410.5625 608.46875 L 400.5625 608.46875 z M 400.5625 612.46875 L 400.5625 614.46875 L 410.5625 614.46875 L 410.5625 612.46875 L 400.5625 612.46875 z " Fill="#FF17314F" Width="15" Height="15" Margin="3,0,0,0"/>
                                    <Label Content="Refresh"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
    </Border>
</Window>
