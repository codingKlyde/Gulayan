<UserControl x:Class="Gulayan.Views.ViewDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:a="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gulayan.Views"
             
             xmlns:icon="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             
             d:Background="White"
             a:Ignorable="d" 
             d:DesignHeight="640" 
             d:DesignWidth="900">


    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <!-- ROW 2 (This element must be first) -->
        <Separator Background="#dae2ea"
                   Grid.Row="1"
                   Height="1"
                   Margin="0, -1, 0, 10" />

        <!-- ROW 1 -->
        <!-- Tab Buttons -->
        <StackPanel Margin="0, 10, 0, 0" Orientation="Horizontal">
            <Button BorderBrush="{StaticResource PrimaryColor}" Content="Vegetable" Style="{StaticResource TabButtonStyle}" />
            <Button Content="Removed" Style="{StaticResource TabButtonStyle}" />
            <Button Content="Archived" Style="{StaticResource TabButtonStyle}" />
        </StackPanel>

        <!-- ROW 3 -->
        <!-- Counter -->
        <TextBlock FontSize="18"
                   FontWeight="SemiBold"
                   Foreground="#121518"
                   HorizontalAlignment="Left"
                   Grid.Row="3"
                   Text="128 Vegetables"
                   VerticalAlignment="Center" />
        <!-- Add & Refresh Button -->
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="3" >
            <!-- Add Button -->
            <Button Margin="0, 0, 10, 0" Style="{StaticResource R4ButtonStyle}">
                <icon:IconImage Foreground="White"
                         Height="10"
                         Icon="Plus" 
                         Width="10"/>
            </Button>
            <!-- Refresh Button -->
            <Button Style="{StaticResource R4ButtonStyle}">
                <icon:IconImage Foreground="White"
                         Height="10"
                         Icon="Refresh" 
                         Width="10"/>
            </Button>
        </StackPanel>
        <!-- Searchbar -->
        <Grid HorizontalAlignment="Right" Grid.Row="3" Width="200">
            <TextBlock Foreground="#b0b9c6"
                       IsHitTestVisible="False"
                       Margin="15, 0"
                       Panel.ZIndex="1"
                       Text="Search ..."
                       VerticalAlignment="Center"
                       Visibility="{Binding ElementName=txtblckSearch1, Converter={StaticResource BoolToVis}, Path=Text.IsEmpty}"/>
            <TextBox Style="{StaticResource SearchStyle}" x:Name="txtblckSearch1" />
            <icon:IconImage Foreground="#b0b9c6"
                            Height="15" 
                            HorizontalAlignment="Right"
                            Icon="Search"
                            Margin="0, 0, 15, 0"
                            Width="15" 
                            VerticalAlignment="Center" />
        </Grid>

        <!-- ROW 4 -->
        <!-- DATAGRID -->
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=10}" 
                  CellStyle="{DynamicResource DataGridCellStyle1}" 
                  ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                  Grid.Row="4"
                  RowStyle="{DynamicResource DataGridRowStyle1}" 
                  Style="{DynamicResource DataGridStyle1}"
                  x:Name="dtgrdVegetable">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn CanUserResize="False" Width="auto">
                    <DataGridCheckBoxColumn.HeaderTemplate>
                        <DataTemplate>
                            <CheckBox Style="{DynamicResource CheckBoxStyle1}" />
                        </DataTemplate>
                    </DataGridCheckBoxColumn.HeaderTemplate>
                </DataGridCheckBoxColumn>


                <DataGridTextColumn Binding="{Binding ID}"
                                    CanUserResize="False" 
                                    Header="ID"
                                    IsReadOnly="True"
                                    Width="50" />
                <DataGridTemplateColumn Header="Name" IsReadOnly="True" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Border Background="{Binding BGColor}"
                                        CornerRadius="50"
                                        Height="25"
                                        Margin="0, 0, 10, 0"
                                        Width="25">
                                    <TextBlock Foreground="White"
                                               HorizontalAlignment="Center"
                                               Margin="0, 0, 0, 1"
                                               Text="{Binding Character}"
                                               VerticalAlignment="Center" />
                                </Border>
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding Barcode}"
                                    Header="Barcode" 
                                    IsReadOnly="True" 
                                    Width="*" />
                <DataGridTextColumn Binding="{Binding Stock}"
                                    Header="Stock"
                                    IsReadOnly="True"
                                    Width="*" />
                <DataGridTextColumn Binding="{Binding Price}" 
                                    Header="Price"
                                    IsReadOnly="True"
                                    Width="*" />

                <DataGridTemplateColumn Header="OPERATIONS" IsReadOnly="True" Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{StaticResource OperationEditButtonStyle}">
                                    <icon:IconImage Icon="Pen" Style="{StaticResource OperationButtonIconStyle}" />
                                </Button>
                                <Button Margin="5, 0, 0, 0" Style="{StaticResource OperationRemoveButtonStyle}">
                                    <icon:IconImage Icon="Trash" Style="{StaticResource OperationButtonIconStyle}" />
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- ROW 5 -->
        <!-- Pagination -->
        <Border Background="White"
                BorderBrush="#dee4ec" 
                BorderThickness="1"
                CornerRadius="5"
                Grid.Row="5" 
                HorizontalAlignment="Right"
                Margin="0, 10, 10, 10"
                Padding="5">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource PagingButtonStyle}">
                    <icon:IconImage Icon="ChevronLeft" Style="{StaticResource PagingButtonIconStyle}" />
                </Button>
                <Rectangle Fill="#dee4ec" Margin="3, 7" Width="1" />

                <Button Background="{StaticResource PrimaryColor}" Content="1" Foreground="White" Style="{StaticResource PagingButtonStyle}" />
                <Button Content="2" Style="{StaticResource PagingButtonStyle}" />
                <Button Content="3" Style="{StaticResource PagingButtonStyle}" />
                <TextBlock FontSize="15"
                           Foreground="#6c7682" 
                           Margin="10, 0"
                           Text="..."
                           VerticalAlignment="Center"/>
                <Button Content="7" Style="{StaticResource PagingButtonStyle}" />
                <Button Content="8" Style="{StaticResource PagingButtonStyle}" />
                <Button Content="9" Style="{StaticResource PagingButtonStyle}" />

                <Rectangle Fill="#dee4ec" Margin="3, 7" Width="1" />
                <Button Style="{StaticResource PagingButtonStyle}">
                    <icon:IconImage Icon="ChevronRight" Style="{StaticResource PagingButtonIconStyle}" />
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>