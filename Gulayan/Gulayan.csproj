<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\Fonts\Dosis-VariableFont_wght.ttf" />
    <None Remove="Assets\Fonts\Oswald-VariableFont_wght.ttf" />
    <None Remove="Assets\Fonts\Satisfy-Regular.ttf" />
    <None Remove="Assets\Fonts\Ubuntu-Regular.ttf" />
    <None Remove="Assets\groceries.png" />
    <None Remove="Assets\Vegetables\aubergine.png" />
    <None Remove="Assets\Vegetables\broccoli.png" />
    <None Remove="Assets\Vegetables\carrot.png" />
    <None Remove="Assets\Vegetables\kale.png" />
    <None Remove="Assets\Vegetables\peas.png" />
    <None Remove="Assets\Vegetables\pepper.png" />
    <None Remove="Assets\Vegetables\tomato.png" />
    <None Remove="Assets\Vegetables\turnip.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\Vegetables\aubergine.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\Vegetables\broccoli.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\Vegetables\carrot.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\Vegetables\kale.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\Vegetables\peas.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\Vegetables\pepper.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\Vegetables\tomato.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\Vegetables\turnip.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FontAwesome.Sharp" Version="6.3.0" />
    <PackageReference Include="LiveCharts.Wpf" Version="0.9.7" />
    <PackageReference Include="MahApps.Metro.IconPacks.Material" Version="4.11.0" />
    <PackageReference Include="Microsoft.Data.Sqlite.Core" Version="9.0.0-preview.3.24172.4" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="9.0.0-preview.3.24172.4" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\Fonts\Dosis-VariableFont_wght.ttf" />
    <Resource Include="Assets\Fonts\Oswald-VariableFont_wght.ttf" />
    <Resource Include="Assets\Fonts\Satisfy-Regular.ttf" />
    <Resource Include="Assets\Fonts\Ubuntu-Regular.ttf" />
    <Resource Include="Assets\groceries.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

</Project>
